<%- include('../partials/header') %>

  <h2>
    <a href="/entries?year=<%= year %>&month=<%= month - 1 %>">◀</a>
    <%= monthNames[month] %>, <%= year %>
        <a href="/entries?year=<%= year %>&month=<%= month + 1 %>">▶</a>
  </h2>
<h3>
  <br><br>Update your journal here
</h3>
  <form id="add-review-form" method="POST"
    action="/entries/<%= entries._id %>/entries">
    <label>Day:</label>
   <div>
      <select name="Exercise">
        <option value="1" selected>1</option>
        <option value="2" >2</option>
        <option value="3" >3</option>
        <option value="4" >4</option>
        <option value="5" >5</option>
        <option value="6" >6</option>
        <option value="7" >7</option>
        <option value="8" >8</option>
        <option value="9" >9</option>
        <option value="10" >10</option>
        <option value="11" >11</option>
        <option value="12" >12</option>
        <option value="13" >13</option>
        <option value="14" >14</option>
        <option value="15" >15</option>
        <option value="16" >16</option>
        <option value="17" >17</option>
        <option value="18" >18</option>
        <option value="19" >19</option>
        <option value="20" >20</option>
        <option value="21" >21</option>
        <option value="22" >22</option>
        <option value="23" >23</option>
        <option value="24" >24</option>
        <option value="25" >25</option>
        <option value="26" >26</option>
        <option value="27" >27</option>
        <option value="28" >28</option>
        <option value="29" >29</option>
        <option value="30" >30</option>
        <option value="31" >31</option>
      </select>
    </div>
<label>Mood Level</label>
    <select name="Mood level">
      <option value="happy">happy</option>
      <option value="angry">angry</option>
      <option value="tired" selected>tired</option>
    </select>
    <input type="submit" value="Add To Log">
  </form>



<% if (entries.exercises) { %>
  <table id="list">
    <thead>
      <tr>
        <th>Day</th>
        <th>achievements</th>
        <th>mood</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% entries.forEach(function(entry) { %>
        <tr>
          <td>
            <%= entry.date %>
          </td>
          <td>
            <%= entry.achievements %>
          </td>
          <td><a href="/entries/<%= entry._id %>">Exercise DETAILS</a></td>
        </tr>
        <% }); %>
    </tbody>
  </table>
  <% } else { %>
    <h4>Nothing logged yet</h4>
    <% } %>
  <%- include('../partials/footer') %>